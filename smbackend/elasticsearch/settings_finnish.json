{
    "analysis": {
        "analyzer": {
            "fulltext_index": {
                "tokenizer": "finnish",
                "filter": [
                    "lowercase",
                    "finnish_word_delimiter_filter",
                    "voikko_filter"
                ]
            },
            "fulltext_query": {
                "tokenizer": "finnish",
                "filter": [
                    "lowercase",
                    "keyword_repeat",
                    "voikko_filter_noncompounds",
                    "unique"
                ]
            },
            "autosuggest_query": {
                "tokenizer": "finnish",
                "filter": [
                    "lowercase",
                    "keyword_repeat",
                    "voikko_filter_noncompounds",
                    "autosuggest_truncate",
                    "unique"
                ],
                "type": "custom"
            },
            "edgengram_analyzer": {
                "filter": [
                    "lowercase",
                    "keyword_repeat",
                    "voikko_filter",
                    "haystack_edgengram",
                    "unique"
                ],
                "tokenizer": "finnish",
                "type": "custom"
            },
            "autosuggest_exact": {
                "tokenizer": "keyword",
                "filter": ["lowercase", "haystack_edgengram"],
                "type": "custom"
            },
            "autosuggest_exact_query": {
                "tokenizer": "keyword",
                "filter": ["lowercase", "autosuggest_truncate"],
                "type": "custom"
            }
        },
        "filter": {
            "finnish_word_delimiter_filter": {
                "type": "word_delimiter",
                "generate_word_parts": true,
                "generate_number_parts": false,
                "catenate_words": false,
                "catenate_numbers": false,
                "preserve_original": true,
                "split_on_numerics": false,
                "stem_english_possessive": false
            },
            "voikko_filter": {
                "type": "voikko",
                "expandCompounds": true
            },
            "voikko_filter_noncompounds": {
                "type": "voikko",
                "expandCompounds": false
            },
            "autosuggest_truncate": {
                "type": "truncate",
                "length": 15
            },
            "haystack_edgengram": {
                "max_gram": "15",
                "min_gram": "1",
                "side": "front",
                "type": "edgeNGram"
            }
        }
    }
}
